@model Net.UI.Models.ViewModels.LoginViewModel
@{
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/SignIn.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,700&family=Inter:wght@300;400;500;700;900&family=Manrope:wght@200..800&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/4116aba114.js" crossorigin="anonymous"></script>
</head>
<body>


   

    <section class="Sign">
        <div class="container">

            <div class="text-container">

                <h1>Welcome Back</h1>

                <div class="accountBox">

                    <p>Don't have an account yet?</p><a href="#">Sign up here</a>
                </div>

            </div>


            <div class="searchbox">



                <form class="searchingbox" method="post">

                    <div class="textin">

                        <p>Username</p>
                        <input type="text" placeholder="Username" asp-for="Username" />
                        <span class="text-danger" asp-validation-for="Username"></span>


                    </div>


                    <div class="textin">

                        <p>Password</p>
                        <input type="password" placeholder="Your password" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>


                    </div>



                    <div class="button-container"><button type="submit" class="button">Sign In</button> </div>





                    <div class="Termscheck">
                        <input type="checkbox" class="checkbox1">
                        <label for="checkbox1">Remember Me</label>
                    </div>

                   






                </form>



                <div class="register">

                    <a href="#">Forgot your password?</a>
                </div>






            </div>









        </div>

    </section>


