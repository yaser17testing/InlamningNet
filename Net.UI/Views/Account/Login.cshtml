    <section class="Sign">
        <div class="container">

            <div class="text-container">

                <h1>Welcome Back</h1>

                <div class="accountBox">
                    <p>Dont have an account yet?</p>
                    <p>Länk</p>
                </div>

            </div>


            <div class="searchbox">



                <form class="searchingbox" method="post">

                    <div class="textin">

                        <p>Username</p>
                        <input type="text" placeholder="Username" asp-for="Username"/>
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>


                    <div class="textin">

                        <p>Password</p>
                        <input type="password" placeholder="Your password" asp-for="Password"/>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>




                    <div class="button-container"><button type="submit" class="button">Sign In</button> </div>




                    <div class="Termscheck">
                        <input type="checkbox" class="checkbox1"/>
                        <label for="checkbox1">Remember Me</label>
                    </div>

                </form>



                <div class="register">

                    <a href="#">Forgot your password?</a>
                </div>






