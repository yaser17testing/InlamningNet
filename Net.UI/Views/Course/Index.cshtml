@model IEnumerable<Net.UI.Models.DTO.CourseDto>
@{
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/IndexCourse.css">
    <title>Document</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,700&family=Inter:wght@300;400;500;700;900&family=Manrope:wght@200..800&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/4116aba114.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>


   


    <section class="CourseInput">
        <div class="container">

            <div class="TopInput">

                <h1>Course</h1> <div class="Inputbox"><input type="text" class="CategoriSearch" placeholder="All categories"> <input type="text" class="CourseSearch" placeholder="Search courses"></div>



            </div>


                    @if (Model != null && Model.Any())
            {



                <div class="CourseBoxes">




                    @foreach (var course in Model)
                    {
                        <div class="box">
                            <div class="textdivone">
                                <div class="img">
                                    <a asp-controller="Course" asp-action="GetCourse" asp-route-id="@course.CourseId" class="iconklass"><img src="~/CourseImage/@course.ImageUrl" alt="Icon"></a>
                                </div>
                                <h5>@course.Title</h5>
                                <p>@course.Author</p>
                                <p>price @course.Price</p>
                                <div class="border-line"></div>
                                <div class="underdiv">
                                    <div class="icontime">
                                        <img src="./IconCourse/bx-time-five.svg" alt="Icon">
                                        <p>@course.Duration hours</p>
                                    </div>
                                    <div class="IconLike">
                                        <img src="./IconCourse/Like.svg" alt="Icon">
                                        <p>LikeButtonText</p>
                                    </div>
                                </div>
                            </div>

                            <a asp-controller="Course" asp-action="BuyCourse" asp-route-id="@course.CourseId" class="btn btn-dark">Buy course</a>
                        </div>




                }
            </div>


            }



        </div>


    </section>


    <section class="underfooter">
        <div class="container">


            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
            </nav>



        </div>




    </section>

   







</body>
</html>
