@model IEnumerable<Net.UI.Models.DTO.CourseDto>
@{
}



<h1 class="mt-3">Course</h1>






<div class="container">
    <div class="row justify-content-center">



        @if (Model != null && Model.Any())
        {

            foreach (var courseDto in Model)
            {
                <div class="col-md-4">
                    <div class="mb-5 bg-light box-shadow p-5">


                        <h2 class="mb-4">@courseDto.Title </h2>
                        <p class="mb-4">

                            Duration: @courseDto.Duration
                            <br />
                            published Date : @courseDto.Price.ToString()

                        </p>



                        <p class="mb-4">@courseDto.Description</p>

                        <a asp-controller="Course" asp-action="GetCourse" asp-route-id="@courseDto.CourseId" class="btn btn-dark">Read More</a>

                        <a asp-controller="Course" asp-action="BuyCourse" asp-route-id="@courseDto.CourseId" class="btn btn-dark">Buy course</a>

                    </div>
                </div>
            }


        }








    </div>





</div>